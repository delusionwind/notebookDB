<!DOCTYPE html>
<html>
  <head>
    <title>Notebookstore</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>

    <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'default', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">NotebookDB</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Notebook", laptops_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "Brand", brands_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "Display", displays_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "CPU", cpus_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "GPU", gpus_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "Disk", disks_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "Keyboard", keyboards_home_path %></li>
          </ul>
          <ul class="nav navbar-nav">
            <li><%= link_to "OS", osystems_home_path %></li>
          </ul>
          <ul class="nav navbar-right">
            <li><%= link_to "Store", stores_home_path %></li>
          </ul>
          <ul class="nav navbar-right">
            <li><%= link_to "Sell", sells_home_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
